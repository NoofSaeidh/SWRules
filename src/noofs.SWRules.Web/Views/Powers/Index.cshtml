@using Abp.Application.Services.Dto
@using noofs.SWRules.Powers.Dto
@using noofs.SWRules.Web.Startup
@{
    ViewBag.ActiveMenu = PageNames.Powers;
}
@model PagedResultDto<PowerDto>
@section scripts
{
    <environment names="Development">
        <script src="~/js/views/powers/index.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/views/powers/index.min.js"></script>
    </environment>
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @L("Powers")
                </h2>
            </div>
            <div>
                <p>
                    <a class="btn btn-primary" asp-action="Create">Create New</a>
                </p>
            </div>

            <div class="body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                <label asp-for="Items[0].Name"></label>
                            </th>
                            <th>
                                <label asp-for="Items[0].Rank"></label>
                            </th>
                            <th>
                                <label asp-for="Items[0].Distance"></label>
                            </th>
                            <th>
                                <label asp-for="Items[0].Duration"></label>
                            </th>
                            <th>
                                <label asp-for="Items[0].Points"></label>
                            </th>
                            <th>
                                <label asp-for="Items[0].Book"></label>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var power in Model.Items)
                        {
                            <tr>
                                <td>@power.Name</td>
                                <td>@power.Rank</td>
                                <td>@power.Distance</td>
                                <td>@power.Duration</td>
                                <td>@power.Points</td>
                                <td>@power.Book</td>
                                <td>
                                    <a href="#" class="dropdown-toggle details-power" data-toggle="modal" role="button"
                                       data-power-id="@power.Id" data-target="#power-details-modal"
                                       aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">Details</i>
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@power.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@power.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@power.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="power-details-modal" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>